#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1/engine
CACHE_DIR=$2

indent() {
  sed -u 's/^/       /'
}


cd $BUILD_DIR

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
mkdir bin
make 2>&1 | indent
